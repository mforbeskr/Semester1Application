<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="kloeverly.presentation.controllers.NewResidentController"
            prefWidth="520.0" prefHeight="260.0">

    <!-- Top: Title -->
    <top>
        <Label fx:id="titleLabel" text="Opret ny beboer"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"
               alignment="CENTER"
               maxWidth="Infinity"
               BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="16" right="16" bottom="12" left="16"/>
            </BorderPane.margin>
        </Label>
    </top>

    <center>
        <GridPane hgap="12" vgap="12" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="0" right="16" bottom="0" left="16"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints minWidth="120" halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <children>
                <Label text="Navn:" GridPane.rowIndex="0"
                       GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" promptText="Indtast navn"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Fødselsdato:" GridPane.rowIndex="1"
                       GridPane.columnIndex="0"/>
                <DatePicker fx:id="birthDatePicker" promptText="Vælg dato"
                            GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Husnummer:" GridPane.rowIndex="2"
                       GridPane.columnIndex="0"/>
                <TextField fx:id="houseNumberField" promptText="Fx 12"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
    </center>

    <!-- Bottom: Actions -->
    <bottom>
        <HBox spacing="8" alignment="CENTER_RIGHT"
              BorderPane.alignment="CENTER">
            <children>
                <Button onAction="#onSave" fx:id="saveNewResidentBtn"
                        text="Gem"/>
                <Button onAction="#onCancel" fx:id="cancelNewResidentBtn"
                        text="Annuller"/>
            </children>
            <padding>
                <Insets top="12" right="16" bottom="16" left="16"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>
